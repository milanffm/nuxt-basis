{
	"compilerOptions": {
		"experimentalDecorators": true,
		"baseUrl": ".",
		"paths": {
			"~/*": [
				"./*"
			],
			"@/*": [
				"./*"
			],
			"~~/*": [
				"./*"
			],
			"@@/*": [
				"./*"
			],
			"img/*": [
				"./static/img/*"
			]
		}
	},
	"include": [
		"/**/*"
	],
	"exclude": [
		"node_modules",
		".nuxt",
		"dist"
	],
	"compileOnSave": false
}
