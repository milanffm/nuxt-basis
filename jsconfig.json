{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"baseUrl": ".",
		"paths": {
			"~/*": [
				"./*"
			],
			"@/*": [
				"./*"
			],
			"~~/*": [
				"./*"
			],
			"@@/*": [
				"./*"
			]
		},
		"lib": [
			"dom",
			"es2015"
		],
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true
	},
	"include": [
		"/**/*"
	],
	"exclude": [
		"node_modules",
		"dist"
	],
	"compileOnSave": false
}