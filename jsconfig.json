{
	"compilerOptions": {
		"target": "es6",
		"baseUrl": ".",
		"paths": {
			"~/*": ["./*"],
			"/": ["./static/*"],
			"@/*": ["./*"],
			"~~/*": ["./*"],
			"@@/*": ["./*"]
		},
		"lib": ["dom", "es2015"],
		"module": "es2015",
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true
	},
	"compileOnSave": false
}
