{
    "compilerOptions": {
		"target": "es5",
		"baseUrl": ".",
		"paths": {
		  "~/*": ["./*"],
		  "@/*": ["./*"],
		  "~~/*": ["./*"],
		  "@@/*": ["./*"],
		},
        "lib": [
            "dom",
            "es2015"
        ],
        "module": "es2015",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "allowJs": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
	},
    "compileOnSave": false
}
